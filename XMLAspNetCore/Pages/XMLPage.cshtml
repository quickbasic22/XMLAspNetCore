@page
@model XMLPageModel
@using XMLAspNetCore.Data
@addTagHelper *, XMLAspNetCore
@{
    ViewData["Title"] = "Create XML File";
}

<h1>Create XML File</h1>

@if (Model.FileCreated)
{
    <p>XML file created successfully.</p>
}
else
{
    <form method="post">
        <button type="submit" class="btn btn-primary">Create XML File</button>
    </form>
}

<div class="row">
    <div class="col-md-8 offset-md-2" style="padding-left: 0;padding-right: 0;">
         <alert alert-type="success">@Model.Alert</alert>
    </div>
</div>

<alert alert-type="warning">warning</alert>

<br />
<alert alert-type="danger">danger</alert>
<br />
<alert alert-type="dark">dark</alert>
<alert alert-type="info">Info</alert>

<button type='button' class='close' data-dismiss='alert' aria-label='Close'>My Button</button>